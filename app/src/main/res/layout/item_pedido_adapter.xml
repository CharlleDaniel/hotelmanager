<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Toallha de banho"
        android:id="@+id/tv_label_item"
        android:textSize="25px"
        android:textIsSelectable="false"
        android:textColor="@color/colorPrimaryText"
        android:layout_marginLeft="20dp"
        android:singleLine="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/iv_check_box"
        android:layout_gravity="right"
        android:src="@android:drawable/checkbox_off_background"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Quantidade: 3"
        android:id="@+id/tv_qtd_item"
        android:textSize="15px"
        android:textIsSelectable="false"
        android:textColor="@color/colorPrimary"
        android:singleLine="true"
        android:textStyle="bold"
        android:layout_below="@+id/tv_label_item"
        android:layout_alignLeft="@+id/tv_label_item"
        android:layout_alignStart="@+id/tv_label_item"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="10dp" />

</RelativeLayout>