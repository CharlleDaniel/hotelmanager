<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textDialog"
        android:text="@string/text_first_access"
        android:textSize="19dp"
        android:typeface="normal"
        android:textColor="#000000"
        android:visibility="visible"
        android:layout_margin="10dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textDialog2"
        android:text="@string/text_first_access2"
        android:textSize="19dp"
        android:typeface="normal"
        android:textColor="#000000"
        android:visibility="visible"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_gravity="center"
        android:layout_below="@+id/textDialog"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_continue"
        android:text="@string/text_continue"
        android:background="@drawable/butons_rounded_corners"
        android:textColor="#fff"
        android:padding="10dp"
        android:clickable="true"
        android:enabled="true"
        android:layout_below="@+id/textDialog2"
        android:layout_alignRight="@+id/textDialog2"
        android:layout_alignEnd="@+id/textDialog2"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp" />

</RelativeLayout>