<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ed_qtd"
        android:hint="Quantidade  1 - 5"
        style="@style/AppTheme"
        android:backgroundTint="@color/colorPrimary"
        android:maxLength="1"
        android:layout_below="@+id/tv_item_label"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"
        android:numeric="integer"
        android:inputType="number"
        android:contextClickable="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Item"
        android:id="@+id/tv_item_label"
        android:textColor="@color/colorPrimary"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text="SALVAR"
        android:id="@+id/bt_save"
        android:elevation="3dp"
        android:textColor="#fff"
        android:shadowColor="#fff"
        android:background="@drawable/butons_rounded_corners"
        android:layout_below="@+id/ed_qtd"
        android:layout_alignRight="@+id/ed_qtd"
        android:layout_alignEnd="@+id/ed_qtd"
        android:layout_marginBottom="10dp"
        android:textSize="20px" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text=" Cancelar "
        android:id="@+id/bt_cancel"
        android:elevation="3dp"
        android:textColor="#ffffff"
        android:shadowColor="#fff"
        android:background="@drawable/butons_rounded_corners"
        android:layout_alignTop="@+id/bt_save"
        android:layout_alignLeft="@+id/ed_qtd"
        android:layout_alignStart="@+id/ed_qtd"
        android:layout_marginBottom="10dp"
        android:textSize="20px" />

</RelativeLayout>