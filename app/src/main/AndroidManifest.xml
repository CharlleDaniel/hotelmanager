<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.managerhotel">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_hotelmanager"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- Splash screen -->
        <activity
            android:name=".view.SplashMyHotel"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.AmenitiesActivity"
            android:parentActivityName=".view.MainActivity">
        </activity>
        <activity
            android:name=".view.EnxovalActivity"
            android:parentActivityName=".view.MainActivity">
        </activity>
        <activity
            android:name=".view.LimpezaActivity"
            android:parentActivityName=".view.MainActivity">
        </activity>
        <activity
            android:name=".view.OutrosActivity"
            android:parentActivityName=".view.MainActivity">
        </activity>
    </application>

</manifest>
